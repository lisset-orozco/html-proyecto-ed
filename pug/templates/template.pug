block config
  include ../config/config.pug

doctype html
html
  head
    title #{pageTitle} | #{siteTitle}
    meta(charset="utf-8")
    meta(name="description" content=description)
    meta(name="viewport", content="width=device-width, initial-scale=1.0, userscalable=no")
    link(rel="stylesheet" href="https://cdn.rawgit.com/escueladigital/EDgrid/1f5abcec/css/ed-grid.min.css")
    link(href="https://file.myfontastic.com/Eau3CFWLAcQdTi9XdFDMCm/icons.css" rel="stylesheet")
    link(rel="stylesheet" href="/css/styles-dist.css")
  body(class=currentPage)
    header.main-header
      .logo-container
        a(href="/")
          img(src="/img/dd-logo.svg", alt="logo" height="150").logo

      nav.menu
        include ../blocks/menu.pug

    div.main-banner
      block banner
        img(src='/img/' + currentPage + '.jpg', alt="banner de "+ currentPage)
    
    .main-content
      main
        block main

      aside.main-sidebar
        block aside
          if followUs == true
            include ../blocks/siguenos.pug

    footer.main-footer
      p Creativos ABC - Todos los derechos reservados
      block footer